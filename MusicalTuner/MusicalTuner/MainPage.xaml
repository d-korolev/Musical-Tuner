            <ComboBoxItem Content="Drop E Tune" Name="EDrop" IsSelected="True"/>
        </ComboBox>
        <Button x:Name="btnNote1" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,113,0,0" Width="70" Click="Button_Click"/>
        <Button x:Name="btnNote2" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,113,0,0" Width="70" Click="Button_Click"/>
        <Button x:Name="btnNote3" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="281,113,0,0" Width="70" Click="Button_Click"/>
        <Button x:Name="btnNote4" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,168,0,0" Width="70" Click="Button_Click"/>
        <Button x:Name="btnNote5" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,168,0,0" Width="70" Click="Button_Click"/>
        <Button x:Name="btnNote6" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="281,168,0,0" Width="70" Click="Button_Click"/>




    </Grid>
</Page>
